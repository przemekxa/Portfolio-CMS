{{#each sections}}
  <div class="row section-container-spacer">
    {{#if (eq type "pageHeader")}}

      {{! Section - Page Header }}
      {{#if showCard}}
        <div class="col-xs-12">
          <img src="/api/image/{{../page.backgroundImage}}" class="img-responsive" alt="">
          <div class="card-container">
            <div class="text-center">
              <h1 class="h2">{{../page.title}}</h1>
            </div>
            {{../page.description}}
          </div>
        </div>
      {{else}}
        <div class="section-container-spacer text-center">
          <h1 class="h2">{{../page.title}}</h1>
        </div>
      {{/if}}

    {{else if (eq type "header")}}

      {{! Section - Header }}
      <div class="section-container-spacer text-center">
        <h1 class="h2">{{header}}</h1>
      </div>

    {{else if (eq type "1image")}}

      {{! Section - 1 image }}
      <div class="col-xs-12">
        <img src="/api/image/{{src}}" class="img-responsive" alt="">
        {{#with title}}
          <p>{{.}}</p>
        {{/with}}
      </div>

    {{else if (eq type "2images")}}

      {{! Section - 2 images }}
      <div class="col-md-8 col-md-offset-2">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <img src="/api/image/{{images.[0].src}}" class="img-responsive" alt="">
            {{#with images.[0].title}}
              <p>{{.}}</p>
            {{/with}}
          </div>
          <div class="col-xs-12 col-md-6">
            <img src="/api/image/{{images.[1].src}}" class="img-responsive" alt="">
            {{#with images.[1].title}}
              <p>{{.}}</p>
            {{/with}}
          </div>
        </div>
      </div>

    {{else if (eq type "paragraph")}}
    
      {{! Section - Paragraph }}
      <div class="col-xs-12">
        {{contents}}
      </div>

    {{else if (eq type "richText")}}
    
      {{! Section - Rich Text }}
      <div class="col-xs-12">
        {{{value}}}
      </div>

    {{else if (eq type "paragraphImage")}}

      {{! Section - Paragraph & Image }}
      <div class="col-md-10 col-md-offset-1">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            {{{paragraph}}}
          </div>
          <div class="col-xs-12 col-md-6">
            <img src="/api/image/{{image}}" class="img-responsive" alt="">
          </div>
        </div>
      </div>

    {{else if (eq type "subpageCarousel")}}

      {{! Section - Subpage Carousel }}
        <div class="col-md-12">
          <div id="myCarousel" class="carousel slide projects-carousel">
            <div class="carousel-inner">
              {{#each (chunked ../page.subpages 3) as |subpages|}}
                <div class="item{{#if @first}} active{{/if}}">
                  <div class="row">
                    {{#each subpages}}
                      <div class="col-sm-4">
                        <a href="/{{id}}" title="" class="black-image-project-hover">
                          <img src="/api/image/{{backgroundImage}}" alt="" class="img-responsive">
                        </a>
                        <div class="card-container card-container-lg">
                          <h3>{{title}}</h3>
                          <p>{{description}}</p>
                          <a href="{{id}}" title="" class="btn btn-default">Discover</a>
                        </div>
                      </div>
                    {{/each}}
                  </div>
              </div>
              {{/each}}
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
          </div>
        </div>
    
    {{else if (eq type "contact")}}

      {{! Section - Contact }}
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <form action="" class="reveal-content">
            <div class="row">
              <div class="col-md-7">
                <div class="form-group">
                  <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" id="subject" placeholder="Subject">
                </div>
                <div class="form-group">
                  <textarea class="form-control" rows="5" placeholder="Enter your message"></textarea>
                </div>
                <button type="submit" class="btn btn-default btn-lg">Send</button>
              </div>
              <div class="col-md-5 address-container">
                <ul class="list-unstyled">
                  {{#with phone}}
                    <li>
                      <span class="fa-icon">
                        <i class="fa fa-phone" aria-hidden="true"></i>
                      </span>
                      <a href="tel:{{.}}">{{.}}</a>
                    </li>
                  {{/with}}
                  {{#with email}}
                    <li>
                      <span class="fa-icon">
                        <i class="fa fa-at" aria-hidden="true"></i>
                      </span>
                      <a href="mailto:{{.}}">{{.}}</a>
                    </li>
                  {{/with}}

                  {{#with address}}
                    <li>
                      <span class="fa-icon">
                        <i class="fa fa fa-map-marker" aria-hidden="true"></i>
                      </span>
                      {{.}}
                    </li>
                  {{/with}}
                </ul>
                <h3>{{socialHeader}}</h3>
                {{#each social}}
                  <a href="{{href}}" title="" class="fa-icon">
                    <i class="fa fa-{{icon}}"></i>
                  </a>
                {{/each}}
              </div>
            </div>
          </form>
        </div>
      </div>

    {{/if}}
  </div>
{{/each}}