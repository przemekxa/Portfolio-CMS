{
  "name": "portfolio-cms",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fastify/autoload": "^5.4.1",
    "@fastify/cookie": "^8.3.0",
    "@fastify/session": "^10.0.2",
    "@fastify/static": "^6.4.1",
    "@fastify/view": "^7.1.1",
    "@mui/icons-material": "^5.10.9",
    "@mui/material": "^5.10.12",
    "dotenv": "^16.0.3",
    "fastify": "4.3.0",
    "handlebars": "^4.7.7",
    "http-proxy-middleware": "^2.0.4",
    "mongodb": "^4.11.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.4.3",
    "react-scripts": "5.0.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "start": "concurrently -p name -n \"REACT,SERVER\" -c \"cyan,blue\" \"npm run start:client\" \"npm run start:server\"",
    "start:client": "react-scripts start",
    "start:server": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=src/server/tsconfig.json node-dev -r ts-node/register --inspect src/server.ts",
    "prod": "cross-env NODE_ENV=production PORT=8080 HOST=0.0.0.0 node entry.js",
    "build": "run-s build:client build:server",
    "build:client": "react-scripts build",
    "build:server": "tsc -p src/server",
    "docker": "run-s docker:build docker:run",
    "docker:build": "docker build --tag=portfolio-cms .",
    "docker:run": "docker run -p 3002:8080 --env-file .env --env MONGO_URI=mongodb://host.docker.internal:27017 portfolio-cms",
    "db:setup": "docker run -d -p 27017:27017 --name portfolio-cms-mongo mongo:6",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.11.3",
    "@types/node-fetch": "^2.6.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "node-dev": "^7.4.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.7.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
